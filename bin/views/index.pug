        div(class="navbar bg-body rounded shadow-lg m-3 p-3 mb-5")
        div#drag-region(class="navbar bg-body rounded shadow-lg m-3 p-3 fixed-top")
            div(class="container-fluid")
                a(class="navbar-brand")
                div(class="d-flex")
                    button#minimize-btn(type="button" class="btn btn-secondary btn-sm mx-2")
                        i(class="bi bi-dash-lg" style="pointer-events: none;")
                    button#fullscreen-toggle(type="button" class="btn btn-secondary btn-sm mx-2")
                        i(class="bi bi-arrows-fullscreen" style="pointer-events: none;")
                    button#close-btn(type="button" class="btn btn-danger btn-sm mx-2")
                        i(class="bi bi-x-lg" style="pointer-events: none;")
        
        div(class="row")
            div(class="col-3")
                div(class="position-relative m-3 p-3 bg-body rounded shadow-lg" style="height: 80vh;")
                    div(class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none")
                        svg(class="bi pe-none me-2" width="40" height="32")
                            use(xlink:href="#bootstrap")
                            
                        span(class="fs-4") Gestore eventi
                        
                    hr
                    ul#sections(class="nav nav-pills flex-column mb-auto")
                        li(class="nav-item")
                            a#home-section(href="home.html" class="nav-link link-dark" aria-current="page")
                                div(class="row")
                                    div(class="col-1")
                                        i(class="bi bi-house-door")
                                    div(class="col")
                                        p Home
                        li(class="nav-item")
                            a#events-section(href="events.html" class="nav-link link-dark" aria-current="page")
                                div(class="row")
                                    div(class="col-1")
                                        i(class="bi bi-calendar3")
                                    div(class="col")
                                        p(data-i18n="navbar.events")
                        li(class="nav-item")
                            a#users-section(href="users.html" class="nav-link link-dark" aria-current="page")
                                div(class="row")
                                    div(class="col-1")
                                        i(class="bi bi-person-circle")
                                    div(class="col")
                                        p(data-i18n="navbar.users")
                        li(class="nav-item")
                            a#settings-section(href="settings.html" class="nav-link link-dark" aria-current="page")
                                div(class="row")
                                    div(class="col-1")
                                        i(class="bi bi-gear-fill")
                                    div(class="col")
                                        p(data-i18n="navbar.settings")
                    hr
                    div(class="position-absolute bottom-0 d-flex align-items-center ps-2 pb-5 link-dark text-decoration-none")
                        span(class="ps-3")
                            a(class="link-dark" href="https://oscarurselli.com/" target="_blank")
                                strong(class="text-black") Made by Oscar Urselli
            div(class="col")
                div(class="my-3 me-3 p-3 bg-body rounded shadow-lg")
                    h2(class="border-bottom pb-2 mb-3") #{view_title}
                    block view_actions

                block content


        script(src="../../node_modules/bootstrap/dist/js/bootstrap.bundle.min.js")
        script(src="../../node_modules/jquery/dist/jquery.min.js")
        script(src="../../node_modules/i18next/i18next.min.js")
        script(src="../../node_modules/jquery-i18next/jquery-i18next.min.js")
        script(src="../js/navbar.js")
        script(src="../js/window-frame.js")
        script(src="../js/internationalization.js")
        block js